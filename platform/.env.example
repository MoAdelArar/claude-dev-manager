# AdelBot Configuration
# Copy this file to .env and fill in your values

# ----- Required: GitHub OAuth App -----
# Create one at: https://github.com/settings/developers
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_REDIRECT_URI=adelbot://callback

# Comma-separated GitHub usernames to auto-promote to admin on login
# e.g. "myusername,cofounder" â€” these users get is_admin=true when they sign in
ADMIN_GITHUB_USERNAMES=

# ----- Required: Anthropic API Key (for Claude Code) -----
# Claude Code runs inside each dev container and needs this key.
# Get yours at: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-...

# Claude Code model override (leave empty for default)
# Examples: claude-sonnet-4-20250514, claude-opus-4-20250514
CLAUDE_CODE_MODEL=

# Max turns for Claude Code (0 = unlimited)
CLAUDE_CODE_MAX_TURNS=0

# ----- Security -----
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=change-me-in-production-use-openssl-rand-hex-32

# ----- Database -----
DATABASE_URL=postgresql+asyncpg://adelbot:adelbot@localhost:5432/adelbot
DATABASE_URL_SYNC=postgresql://adelbot:adelbot@localhost:5432/adelbot

# ----- Redis -----
REDIS_URL=redis://localhost:6379/0

# ----- Docker -----
DOCKER_HOST=unix:///var/run/docker.sock
CONTAINER_NETWORK=adelbot-network
CONTAINER_IMAGE_PREFIX=adelbot-dev
CONTAINER_MAX_LIFETIME_HOURS=8
CONTAINER_MEMORY_LIMIT=2g
CONTAINER_CPU_LIMIT=2.0

# ----- Billing (Optional) -----
# STRIPE_API_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...
RATE_PER_MINUTE=0.01
FREE_MINUTES_PER_MONTH=60

# ----- App -----
APP_NAME=AdelBot
DEBUG=true
CORS_ORIGINS=["*"]
